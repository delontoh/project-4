<h1>Log in</h1><br/><br/><br/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="lgin input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :email %></span><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
  </div>

  <div class="lgin input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :password %></span><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
  </div><br/>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%><br/>

  <div class="actions btn btn-outline-success">
    <%= f.submit "Login" %>
  </div>
<% end %>

