<h1>Register Account</h1><br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :first_name %></span><br />
        <%= f.text_field :first_name, required: true %>
      </div>
  </div>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :last_name %></span><br />
        <%= f.text_field :last_name, required: true %>
      </div>
  </div>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :email %></span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div>
  </div>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :password %></span>
        <%= f.password_field :password, required: true %>

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
  </div>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :password_confirmation, "Re-enter Password" %></span><br />
        <%= f.password_field :password_confirmation, required: true %>

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
  </div>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :about_me %></span><br />
        <%= f.text_area :content, required: true %>
      </div>
  </div>

  <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><%= f.label :top_5_skills %></span><br />
        <%= f.select :skill_1, ['Angular', 'C++', 'C#', 'Objective C', 'Django', 'EmberJS', 'ExpressJS', 'HTML/CSS', 'Java', 'Javascript', 'Laravel', 'MongoDB', 'PHP', 'Postgres', 'Python', 'Rails', 'ReactJS', 'React Native', 'Ruby', 'VueJS'], {:prompt => 'Select Skill'}, {required: true} %>
        <%= f.select :skill_2, ['Angular', 'C++', 'C#', 'Objective C', 'Django', 'EmberJS', 'ExpressJS', 'HTML/CSS', 'Java', 'Javascript', 'Laravel', 'MongoDB', 'PHP', 'Postgres', 'Python', 'Rails', 'ReactJS', 'React Native', 'Ruby', 'VueJS'], {:prompt => 'Select Skill'}, {required: true} %>
        <%= f.select :skill_3, ['Angular', 'C++', 'C#', 'Objective C', 'Django', 'EmberJS', 'ExpressJS', 'HTML/CSS', 'Java', 'Javascript', 'Laravel', 'MongoDB', 'PHP', 'Postgres', 'Python', 'Rails', 'ReactJS', 'React Native', 'Ruby', 'VueJS'], {:prompt => 'Select Skill'}, {required: true} %>
        <%= f.select :skill_4, ['Angular', 'C++', 'C#', 'Objective C', 'Django', 'EmberJS', 'ExpressJS', 'HTML/CSS', 'Java', 'Javascript', 'Laravel', 'MongoDB', 'PHP', 'Postgres', 'Python', 'Rails', 'ReactJS', 'React Native', 'Ruby', 'VueJS'], {:prompt => 'Select Skill'}, {required: true} %>
        <%= f.select :skill_5, ['Angular', 'C++', 'C#', 'Objective C', 'Django', 'EmberJS', 'ExpressJS', 'HTML/CSS', 'Java', 'Javascript', 'Laravel', 'MongoDB', 'PHP', 'Postgres', 'Python', 'Rails', 'ReactJS', 'React Native', 'Ruby', 'VueJS'], {:prompt => 'Select Skill'}, {required: true} %>
      </div>
  </div><br/><br/><br/>

  <div class="actions btn btn-outline-success">
    <%= f.submit "Register" %>
  </div>
<% end %>

